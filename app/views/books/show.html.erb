<div class="row">

<div class="col-md-4">
<%= image_tag @book.book_img.url(:book_show), class: "book-show"%>
</div>

<div class="col-md-8">
    <div class ="book-info">
    <h2 class="book-title"><%= @book.title %> </h2>
    <h3 class="book-author"><span>From</span> <%= @book.author %> </h3>
    <h2 class ="avg-rating">Average Rating</h2>
    <div class="average-review-rating" data-score=<%= @average_review %>></div>
    <span class="number-of-reviews">Based on <%= @book.reviews.count %> review(s) </span>
    <p class="book-desc"><%= @book.description %> </p>

    <div class="link btn-group">
            <%= link_to "Back", root_path, class: "btn btn-custom" %>
            <% if user_signed_in? %>
            <% if @book.user_id === current_user.id %>
            <%=link_to "Edit", edit_book_path, class: "btn btn-custom"  %>
            <%= link_to "Delete", book_path(@book), method: :delete, data: {confirm: "Are you sure ?"}, class: "btn btn-custom"   %>
            <% end %>
            <% end %>
        </div>
</div>
</div>

</div>

<div class="row">
    <div class="col-md-4">
        <div class ="reviews">
        <!--where reviews will go into  -->
        <h1>Reviews</h1>
        <%= render @book.reviews %>
        <div><%= link_to "Add Review", new_book_review_path(@book), class: "btn-custom"%></div>
        <br><br>
        </div>
    </div>
</div>
<br>

<script>
$('.review-rating').raty({
    readOnly: true,
    score: function(){
        return $(this).attr('data-score');
    },
    path: '/app/assets/'
});
</script>

<script>
$('.average-review-rating').raty({
    readOnly: true,
    score: function(){
        return $(this).attr('data-score');
    },
    path: '../../assets/images/'
});
</script>